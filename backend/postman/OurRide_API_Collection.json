{
	"info": {
		"_postman_id": "ourride-api-collection",
		"name": "OurRide API - Authentication",
		"description": "Complete API collection for OurRide backend authentication endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "1. Send OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    pm.test(\"Status code is 200\", function () {",
									"        pm.response.to.have.status(200);",
									"    });",
									"    ",
									"    pm.test(\"Response has message\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData).to.have.property('message');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"1234567890\",\n    \"countryCode\": \"+1\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/send-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"send-otp"
							]
						},
						"description": "Send OTP to phone number for verification"
					},
					"response": []
				},
				{
					"name": "2. Resend OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"1234567890\",\n    \"countryCode\": \"+1\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/resend-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"resend-otp"
							]
						},
						"description": "Resend OTP to phone number (after cooldown period)"
					},
					"response": []
				},
				{
					"name": "3. Verify OTP - Sign In",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    pm.test(\"Status code is 200\", function () {",
									"        pm.response.to.have.status(200);",
									"    });",
									"    ",
									"    pm.test(\"Response has access token\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData).to.have.property('accessToken');",
									"        ",
									"        // Save token for other requests",
									"        pm.environment.set('access_token', jsonData.accessToken);",
									"        pm.environment.set('refresh_token', jsonData.refreshToken);",
									"        pm.environment.set('user_id', jsonData.user.id);",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"1234567890\",\n    \"countryCode\": \"+1\",\n    \"otp\": \"1234\",\n    \"isSignUp\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/verify-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"verify-otp"
							]
						},
						"description": "Verify OTP and sign in existing user"
					},
					"response": []
				},
				{
					"name": "4. Verify OTP - Sign Up",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    pm.test(\"Status code is 200\", function () {",
									"        pm.response.to.have.status(200);",
									"    });",
									"    ",
									"    pm.test(\"Response indicates profile completion required\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData).to.have.property('requiresProfileCompletion');",
									"        pm.expect(jsonData.requiresProfileCompletion).to.be.true;",
									"        ",
									"        // Save token",
									"        pm.environment.set('access_token', jsonData.accessToken);",
									"        pm.environment.set('refresh_token', jsonData.refreshToken);",
									"        pm.environment.set('user_id', jsonData.user.id);",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phoneNumber\": \"9876543210\",\n    \"countryCode\": \"+1\",\n    \"otp\": \"5678\",\n    \"isSignUp\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/verify-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"verify-otp"
							]
						},
						"description": "Verify OTP and create new user account"
					},
					"response": []
				},
